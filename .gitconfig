[user]
	email = me@luizbranco.com
	name = Luiz Branco

[core]
  editor = nvim
	excludesfile = ~/.gitignore_global
	autocrlf = input

[color]
	ui = true

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[url "git@github.com:"]
  insteadOf = https://github.com/

[push]
  #Only Push Upstream for the Current Branch
	default = current

[log]
    date = relative
[format]
    pretty = format:%h\t%Cblue%ad%Creset\t%an\t%Cgreen%s%Creset

[alias]
  ci = commit
  co = checkout
  di = diff
  dc = diff --cached
  amend = commit --amend
  aa = add --all
  l = "!. ~/.githelpers && pretty_git_log"
  r = !git l -30
  ra = !git r --all
  rmu = clean -f -d
	d = difftool

[merge]
  tool = vimdiff
[mergetool "vimdiff"]
  cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[github]
	user = luizbranco

[ghi]
	token = e16f5082b8db203f8cd3620c76413ff3f3a45e90
[gh]
	autoUpdate = always
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[difftool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE
